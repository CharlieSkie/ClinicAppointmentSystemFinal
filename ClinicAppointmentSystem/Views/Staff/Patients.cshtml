@model IEnumerable<ClinicAppointmentSystem.Models.ApplicationUser>
@{
    ViewData["Title"] = "Patients Management";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2"><i class="fas fa-users"></i> Patients Management</h1>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">All Patients</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Registered</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var patient in Model)
                        {
                            <tr>
                                <td>@patient.FirstName @patient.LastName</td>
                                <td>@patient.Email</td>
                                <td>@(patient.PhoneNumber ?? "Not provided")</td>
                                <td>@patient.CreatedDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @if (patient.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>