@model ClinicAppointmentSystem.Models.Schedule
@{
    ViewData["Title"] = "Edit Schedule";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2"><i class="fas fa-edit"></i> Edit Schedule</h1>
        <a asp-action="Schedule" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Schedules
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Schedule Details</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="EditSchedule">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="DoctorId" class="form-label">Doctor *</label>
                                    <select asp-for="DoctorId" class="form-control" required>
                                        <option value="">Select Doctor</option>
                                        @foreach (var doctor in ViewBag.Doctors)
                                        {
                                            <option value="@doctor.Id">@doctor.Name - @doctor.Specialization</option>
                                        }
                                    </select>
                                    <span asp-validation-for="DoctorId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="DayOfWeek" class="form-label">Day of Week *</label>
                                    <select asp-for="DayOfWeek" class="form-control" required>
                                        <option value="">Select Day</option>
                                        <option value="0">Sunday</option>
                                        <option value="1">Monday</option>
                                        <option value="2">Tuesday</option>
                                        <option value="3">Wednesday</option>
                                        <option value="4">Thursday</option>
                                        <option value="5">Friday</option>
                                        <option value="6">Saturday</option>
                                    </select>
                                    <span asp-validation-for="DayOfWeek" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="StartTime" class="form-label">Start Time *</label>
                                    <input asp-for="StartTime" type="time" class="form-control" required />
                                    <span asp-validation-for="StartTime" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="EndTime" class="form-label">End Time *</label>
                                    <input asp-for="EndTime" type="time" class="form-control" required />
                                    <span asp-validation-for="EndTime" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="MaxAppointments" class="form-label">Max Appointments *</label>
                                    <input asp-for="MaxAppointments" type="number" class="form-control" min="1" max="50" required />
                                    <span asp-validation-for="MaxAppointments" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3 pt-4">
                                    <div class="form-check">
                                        <input class="form-check-input" asp-for="IsActive" />
                                        <label class="form-check-label" asp-for="IsActive">
                                            Active Schedule
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Update Schedule
                            </button>
                            <a asp-action="Schedule" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Current Information</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Schedule ID:</strong> @Model.Id
                    </div>
                    <div class="mb-3">
                        <strong>Current Doctor:</strong> @Model.Doctor?.Name
                    </div>
                    <div class="mb-3">
                        <strong>Current Day:</strong> @Model.DayOfWeek
                    </div>
                    <div class="mb-3">
                        <strong>Current Time:</strong> @Model.StartTime.ToString(@"hh\:mm") - @Model.EndTime.ToString(@"hh\:mm")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Set dropdown values
            $('#DoctorId').val('@Model.DoctorId');
            $('#DayOfWeek').val('@((int)Model.DayOfWeek)');

            // Auto-dismiss alerts
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);

            // Debug form submission
            $('form').on('submit', function(e) {
                console.log('Form submitted');
                console.log('DoctorId:', $('#DoctorId').val());
                console.log('DayOfWeek:', $('#DayOfWeek').val());
                console.log('StartTime:', $('#StartTime').val());
                console.log('EndTime:', $('#EndTime').val());
            });
        });
    </script>
}