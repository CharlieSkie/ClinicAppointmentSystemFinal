@model IEnumerable<ClinicAppointmentSystem.Models.Schedule>

@{
    ViewData["Title"] = "Doctor Schedules";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-clock me-2"></i>Doctor Schedules</h2>
        <a asp-action="CreateSchedule" class="btn btn-success">
            <i class="fas fa-plus me-1"></i>Create New Schedule
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>No schedules found. Create your first schedule.
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0"><i class="fas fa-list me-2"></i>Active Schedules</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Doctor</th>
                                <th>Day of Week</th>
                                <th>Start Time</th>
                                <th>End Time</th>
                                <th>Max Appointments</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var schedule in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@schedule.Doctor?.Name</strong>
                                        @if (!string.IsNullOrEmpty(schedule.Doctor?.Specialization))
                                        {
                                            <br />
                                            <small class="text-muted">@schedule.Doctor.Specialization</small>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@schedule.DayOfWeek</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-success">@schedule.StartTime.ToString(@"hh\:mm")</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-danger">@schedule.EndTime.ToString(@"hh\:mm")</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-warning text-dark">@schedule.MaxAppointments</span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="EditSchedule" asp-route-id="@schedule.Id"
                                               class="btn btn-primary" title="Edit Schedule">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <form asp-action="DeleteSchedule" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@schedule.Id" />
                                                <button type="submit" class="btn btn-danger"
                                                        onclick="return confirm('Are you sure you want to delete this schedule? This action cannot be undone.')"
                                                        title="Delete Schedule">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}