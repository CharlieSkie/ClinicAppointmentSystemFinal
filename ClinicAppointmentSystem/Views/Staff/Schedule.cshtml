@model IEnumerable<ClinicAppointmentSystem.Models.Schedule>
@{
    ViewData["Title"] = "Doctor Schedule";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2"><i class="fas fa-calendar-alt"></i> Doctor Schedule</h1>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Weekly Schedule</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Doctor</th>
                            <th>Day</th>
                            <th>Start Time</th>
                            <th>End Time</th>
                            <th>Max Appointments</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var schedule in Model)
                        {
                            <tr>
                                <td>@schedule.Doctor.Name</td>
                                <td>@schedule.DayOfWeek</td>
                                <td>@schedule.StartTime.ToString(@"hh\:mm")</td>
                                <td>@schedule.EndTime.ToString(@"hh\:mm")</td>
                                <td>@schedule.MaxAppointments</td>
                                <td>
                                    @if (schedule.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>