@model IEnumerable<ClinicAppointmentSystem.Models.Schedule>
@{
    ViewData["Title"] = "Doctor Schedule";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2"><i class="fas fa-calendar-alt"></i> Doctor Schedule</h1>
        <a asp-action="CreateSchedule" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add Schedule
        </a>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Doctor Schedules</h5>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> No schedules found. Add schedules for doctors using the "Add Schedule" button.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Doctor</th>
                                <th>Day</th>
                                <th>Start Time</th>
                                <th>End Time</th>
                                <th>Max Appointments</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var schedule in Model)
                            {
                                <tr>
                                    <td>@schedule.Doctor.Name</td>
                                    <td>@schedule.DayOfWeek</td>
                                    <td>@schedule.StartTime.ToString(@"hh\:mm")</td>
                                    <td>@schedule.EndTime.ToString(@"hh\:mm")</td>
                                    <td>@schedule.MaxAppointments</td>
                                    <td>
                                        @if (schedule.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a asp-action="EditSchedule" asp-route-id="@schedule.Id" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <form method="post" asp-action="ToggleScheduleStatus" class="d-inline">
                                                <input type="hidden" name="id" value="@schedule.Id" />
                                                <button type="submit" class="btn @(schedule.IsActive ? "btn-secondary" : "btn-success") btn-sm">
                                                    <i class="fas @(schedule.IsActive ? "fa-toggle-off" : "fa-toggle-on")"></i>
                                                    @(schedule.IsActive ? "Deactivate" : "Activate")
                                                </button>
                                            </form>
                                            <form method="post" asp-action="DeleteSchedule" class="d-inline">
                                                <input type="hidden" name="id" value="@schedule.Id" />
                                                <button type="submit" class="btn btn-danger btn-sm"
                                                        onclick="return confirm('Are you sure you want to delete this schedule?')">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>